function StateSelectionList
   (
   $mode = "",
   $selected_option = ""
   )
//
   {
   $saved_error_level = error_reporting(E_ALL);
   //
   $result = @mysql_query("select id,abbreviation from " . $mode . "state order by abbreviation");
   //
   if (!mysql_error() and mysql_num_rows($result))
      {
      echo "<select name=state_id>\n";
      //
      while($row = mysql_fetch_array($result))
         {
         $id = $abbreviation = "";
         extract($row);
         echo "   <option value=\"$id\"";
         if ($id == $selected_option) echo " selected";
         echo ">$abbreviation</option>\n";
         }
      //
      echo "</select>\n";
      }
   //
   error_reporting($saved_error_level);
   }
?>